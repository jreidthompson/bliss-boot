from libs.Manager import Manager
from libs.Toolkit import Toolkit

tools = Toolkit()

class Boot(object):
	def __init__(self):
		self.manager = Manager()

	def start(self):
		# Print the header information
		tools.print_info()

		# Create and write the bootloader configuration file
		self.manager.write_entries()

		# Create a symlink in /boot that points back to itself
		tools.create_bootlink()

if __name__ == "__main__":
	booter = Boot()
	booter.start()
