from libs import Scanner
from libs import Manager
from libs import Toolkit

class Boot(object):
	def __init__(self):
		self.toolkit = Toolkit.Toolkit()
		self.scanner = Scanner.Scanner()
		self.manager = Manager.Manager(self.scanner)

	def start(self):
		# Prints the kernels found in /boot/kernels
		self.scanner.print_kernels()

		# Print the kernels found in the configuration file
		self.manager.print_kernels()

		# Checks to see that at least one kernel entry will be written
		self.manager.check_kernels()

		# Create and write the bootloader configuration file
		self.manager.write_entries()

		# Create a symlink in /boot that points back to itself
		self.toolkit.create_bootlink()

if __name__ == "__main__":
	booter = Boot()
	booter.start()
