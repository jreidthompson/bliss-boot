from libs.Manager import Manager
from libs.Toolkit import Toolkit as tools
from libs.ConfigLoader import ConfigLoader
from libs.Scanner import Scanner

class Boot:
	def __init__(self):
		# Print the header information
		tools.print_info()

		# Gets parameters
		tools.welcome()

		# Sets up the Manager ;) (This is what is going to write our file)
		self.manager = Manager()

	def start(self):
		if not tools.only_bootloader():
			self.manager.write_entries()

		self.manager.install_bootloader()

if __name__ == "__main__":
	booter = Boot()
	booter.start()
